<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  xmlns:web="http://java.sun.com/xml/ns/javaee" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
 
  <display-name>hopon_local</display-name>
  
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
    <param-value>resources.application</param-value>
  </context-param>
 
  <listener>
    <listener-class>com.sun.faces.config.ConfigureListener</listener-class>
  </listener>
 
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
	
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>*.xhtml</url-pattern>
  </servlet-mapping>
 
  <filter>
    <filter-name>AuthorizationFilter</filter-name>
    <filter-class>com.hopon.filters.AuthorizationFilter</filter-class>
  </filter>
 
  <filter-mapping>
    <filter-name>AuthorizationFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
 
  <filter>
    <filter-name>PrimeFaces FileUpload Filter</filter-name>
    <filter-class>org.primefaces.webapp.filter.FileUploadFilter</filter-class>
    <init-param>
      <param-name>thresholdSize</param-name>
      <param-value>51200</param-value>
    </init-param>
    <init-param>
      <param-name>uploadDirectory</param-name>
      <param-value>C:\Users\yogesh\workspace-jee-helios\heponTest</param-value>
    </init-param>
  </filter>
 
  <filter-mapping>
    <filter-name>PrimeFaces FileUpload Filter</filter-name>
    <servlet-name>Faces Servlet</servlet-name>
  </filter-mapping>
 
 
  <error-page>
    <exception-type>javax.faces.application.ViewExpiredException</exception-type>
    <location>/pages/signin.xhtml</location>
  </error-page>
  <error-page>
    <exception-type>java.lang.Exception</exception-type>
    <location>/error.xhtml</location>
  </error-page>
  <error-page>
    <error-code>400</error-code>
    <location>/error.xhtml</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/error.xhtml</location>
  </error-page>
  <error-page>
    <error-code>440</error-code>
    <location>/error.xhtml</location>
  </error-page>
  <error-page>
    <error-code>444</error-code>
    <location>/error.xhtml</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/error.xhtml</location>
  </error-page>
  <error-page>
    <error-code>502</error-code>
    <location>/error.xhtml</location>
  </error-page>
  <error-page>
    <error-code>503</error-code>
    <location>/error.xhtml</location>
  </error-page>
  <error-page>
    <error-code>504</error-code>
    <location>/error.xhtml</location>
  </error-page>
  <error-page>
    <error-code>505</error-code>
    <location>/error.xhtml</location>
